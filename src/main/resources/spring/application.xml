<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="configuration.xml" />
    <import resource="datasource.xml" />
    <import resource="modules.xml" />

    <bean id="freeVoteBot" class="org.freecode.irc.votebot.FreeVoteBot" init-method="init">
        <property name="nick" value="FreeVoteBot" />
        <property name="user" value="FreeVoteBot" />
        <property name="realName" value="FreeVoteBot" />
        <property name="serverHost" value="irc.rizon.net" />
        <property name="port" value="6667" />
        <property name="channels" value="#freecode" />
        <property name="voteDAO" ref="voteDAO" />
        <property name="pollDAO" ref="pollDAO" />
        <property name="modules">
            <list>
                <ref bean="createPollModule" />
                <ref bean="passwordModule" />
                <ref bean="testModule" />
                <ref bean="versionModule" />
            </list>
        </property>
    </bean>
</beans>