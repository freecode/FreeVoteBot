<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="datasource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="org.sqlite.JDBC" />
        <property name="url" value="jdbc:sqlite:freecode.db" />
        <property name="initialSize" value="1" />
        <property name="maxIdle" value="1" />
        <property name="maxActive" value="1" />
    </bean>

    <bean id="pollDAO" class="org.freecode.irc.votebot.dao.PollDAO">
        <property name="DBConnection" ref="datasource"/>
    </bean>

    <bean id="voteDAO" class="org.freecode.irc.votebot.dao.VoteDAO">
        <property name="DBConnection" ref="datasource"/>
    </bean>
</beans>